<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">


    <TextView
        android:id="@+id/xValue"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/xGyroValue"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/yValue"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/yGyroValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/zValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        app:layout_constraintEnd_toEndOf="@+id/zGyroValue"
        app:layout_constraintStart_toStartOf="@+id/zGyroValue"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/xGyroValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/xMagnoValue"
        app:layout_constraintStart_toStartOf="@+id/xMagnoValue"
        app:layout_constraintTop_toTopOf="@+id/yGyroValue" />

    <TextView
        android:id="@+id/yGyroValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="@+id/yMagnoValue"
        app:layout_constraintStart_toStartOf="@+id/yMagnoValue"
        app:layout_constraintTop_toBottomOf="@+id/zValue" />

    <TextView
        android:id="@+id/zGyroValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/yGyroValue"
        app:layout_constraintEnd_toEndOf="@+id/zMagnoValue"
        app:layout_constraintStart_toStartOf="@+id/zMagnoValue"
        app:layout_constraintTop_toTopOf="@+id/yGyroValue" />

    <TextView
        android:id="@+id/xMagnoValue"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xGyroValue" />

    <TextView
        android:id="@+id/yMagnoValue"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toEndOf="@+id/xMagnoValue"
        app:layout_constraintTop_toBottomOf="@+id/yGyroValue" />

    <TextView
        android:id="@+id/zMagnoValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/yMagnoValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/yMagnoValue"
        app:layout_constraintTop_toTopOf="@+id/yMagnoValue" />

    <Button
        android:id="@+id/btnPothole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="23dp"
        android:layout_marginBottom="41dp"
        android:text="mark pothole"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnHump"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="46dp"
        android:text="mark hump"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginTop="14dp"
        android:text="start driving"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>